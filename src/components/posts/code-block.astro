---
import { Code } from "astro:components";
import type { BuiltinLanguage } from "shiki";

interface Props {
  code: string;
  lang: BuiltinLanguage;
  filename?: string;
  showLineNumbers?: boolean;
}

const { code, lang, filename, showLineNumbers = false } = Astro.props;
const blockId = `code-${Math.random().toString(36).substr(2, 9)}`;
---

<div
  class="my-8 rounded-xl overflow-hidden bg-[#1e1e1e] shadow-2xl border border-white/5 code-block-container"
>
  <div
    class="px-3 bg-[#2d2d2d] border-b border-white/5 flex items-center justify-between"
  >
    <div class="flex">
      {
        filename && (
          <div class="px-3 py-2 text-sm font-medium text-gray-200 relative">
            {filename}
            <div class="absolute bottom-0 left-0 right-0 h-0.5 bg-primary-500" />
          </div>
        )
      }
    </div>
    <button
      class="copy-code-btn p-1.5 rounded-md hover:bg-white/5 text-gray-400 hover:text-white transition-colors"
      data-code-id={blockId}
      aria-label="Copy code to clipboard"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
        <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"
        ></path>
      </svg>
    </button>
  </div>
  <div class="relative bg-[#1e1e1e]" data-code-block={blockId}>
    <Code
      code={code.trim()}
      lang={lang}
      theme="github-dark"
      class={showLineNumbers ? "line-numbers" : ""}
    />
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const copyButtons = document.querySelectorAll(".copy-code-btn");

    copyButtons.forEach((button) => {
      button.addEventListener("click", async () => {
        const codeId = button.getAttribute("data-code-id");
        const codeBlock = document.querySelector(
          `[data-code-block="${codeId}"]`
        );
        const code = codeBlock?.textContent || "";

        try {
          await navigator.clipboard.writeText(code);

          // Show success state
          button.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>`;
          button.classList.add("text-green-400");

          setTimeout(() => {
            button.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg>`;
            button.classList.remove("text-green-400");
          }, 2000);
        } catch (err) {
          console.error("Failed to copy code:", err);
        }
      });
    });
  });
</script>

<style is:global>
  .astro-code {
    padding: 1.5rem;
    font-size: 0.875rem;
    line-height: 1.7;
    overflow-x: auto;
    background: #1e1e1e !important;
  }

  .line-numbers .line {
    display: inline-block;
    width: 100%;
  }

  .line-numbers .line::before {
    content: attr(data-line);
    display: inline-block;
    width: 2.5rem;
    margin-right: 1.5rem;
    text-align: right;
    color: #6b7280;
    user-select: none;
  }
</style>
