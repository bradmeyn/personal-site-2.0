---
import Container from "../shared/Container.astro";
import Logo from "./Logo.astro";
import { navLinks } from "../../data/links";
import Hamburger from "./Hamburger.astro";
---

<header class="header" id="header">
  <Container>
    <nav class="navbar">
      <Logo />

      <div class="navbar__links">
        <ul>
          {
            navLinks.map((link) => (
              <li class="navbar__item">
                <a href="{{ link.url }}" class="navbar__link">
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <Hamburger />
    </nav>
  </Container>
</header>

<style is:global>
  header {
    position: fixed;
    z-index: 100;
    width: 100%;
  }

  .navbar {
    padding: 1rem 0;
    display: flex;
    width: 100%;
    justify-content: space-between;
    align-items: center;
    z-index: 1000;
  }

  .header--scrolled {
    background-color: var(--primary-dark-transparent);
  }

  .navbar__links {
    height: 100vh;
    width: 75%;
    position: fixed;
    top: 0;
    right: 0;
    z-index: 100;
    transform: translateX(100%);
    visibility: hidden;
    transition: transform 0.3s ease-in-out;
    background-color: var(--primary);
  }

  .navbar__links ul {
    margin-top: 200px;
    display: flex;
    flex-direction: column;
  }

  .navbar__links li,
  .navbar__links li a {
    width: 100%;
  }

  body.navbar--active {
    overflow: hidden;
  }

  .navbar--active .navbar__links {
    transform: translateX(0);
    opacity: 1;
    visibility: visible;
    background: var(--primary-dark);
  }

  .navbar__link {
    display: block;
    text-align: left;
    color: var(--primary-light);
    font-size: var(--fs-md);
    font-weight: 300;
    text-decoration: none;
    width: 100%;
    padding: 1.5rem 3rem;
    background-position: right;
    cursor: pointer;
    transition: background 0.5s linear;
  }

  .navbar__link:hover {
    color: #fff;
    background-position: left;
    background-size: 200%;
    background-image: var(--gradient-secondary);
  }

  .navbar--active main,
  .navbar--active footer {
    filter: blur(200px);
  }

  /* DESKTOP------------------------------------------------------------ */

  @media (min-width: 768px) {
    .navbar__links ul {
      margin-top: auto;
      position: relative;
      height: auto;
      display: flex;
      flex-direction: row;
      justify-content: flex-end;
      gap: 1rem;
      align-items: center;
    }

    .navbar__links {
      position: relative;
      width: auto;
      height: auto;
      visibility: visible;
      transform: translateX(0);
      transition: none;
      background-color: transparent;
    }

    .navbar__link {
      font-size: var(--fs-sm);
      padding: 0.8rem 1rem;
      text-align: center;
      border-radius: 5px;
      animation: fadeDown 1s;

      animation-fill-mode: both;
    }

    .navbar__item:nth-child(1) .navbar__link {
      animation-delay: 1.2s;
    }

    .navbar__item:nth-child(2) .navbar__link {
      animation-delay: 1.4s;
    }

    .navbar__item:nth-child(3) .navbar__link {
      animation-delay: 1.6s;
    }
  }
</style>
