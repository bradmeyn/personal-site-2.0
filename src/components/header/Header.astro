---
import Navbar from "../navbar/Navbar.astro";
import HeaderLogo from "./HeaderLogo.astro";
import Hamburger from "./Hamburger.astro";
---

<header>
  <HeaderLogo />
  <Navbar />
  <Hamburger />
</header>

<style>
  header {
    padding: 0 2rem;
    position: absolute;
    background-color: transparent;
    width: 100%;
    height: 8rem;
    max-width: 120rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    z-index: 2;
    border: solid 1px red;
  }

  /* Desktop */
  @media only screen and (min-width: 768px) {
    .header {
      align-items: center;
      transition: none;
      left: 50%;
      transform: translateX(-50%);
    }
  }
</style>
