---
import type { Project } from "@/constants/projects";
type Props = {
  project: Project;
};

const { project } = Astro.props;
const { title, description, image, tech, link, repository } = project;
---

<div class="group p-4 flex-col lg:flex-row mx-auto gap-4 flex card">
  <!-- Project Image -->
  <div
    class="flex items-center justify-center size-16 bg-orange-100 text-primary-700 border-ui-700/50 border rounded-xl"
  >
    <svg
      class="transition-transform duration-300 group-hover:scale-110 size-8 lg:size-10"
      viewBox="0 0 24 24"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
      stroke="currentColor"
      ><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g
        id="SVGRepo_tracerCarrier"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke="#CCCCCC"
        stroke-width="0.72"></g><g id="SVGRepo_iconCarrier">
        <path
          d="M2 14C2 10.2288 2 8.34315 3.17157 7.17157C4.34315 6 6.22876 6 10 6H14C17.7712 6 19.6569 6 20.8284 7.17157C22 8.34315 22 10.2288 22 14C22 17.7712 22 19.6569 20.8284 20.8284C19.6569 22 17.7712 22 14 22H10C6.22876 22 4.34315 22 3.17157 20.8284C2 19.6569 2 17.7712 2 14Z"
          stroke="#c2410c;"
          stroke-width="1.5"></path>
        <path
          d="M16 6C16 4.11438 16 3.17157 15.4142 2.58579C14.8284 2 13.8856 2 12 2C10.1144 2 9.17157 2 8.58579 2.58579C8 3.17157 8 4.11438 8 6"
          stroke="#c2410c;"
          stroke-width="1.5"></path>
        <path
          d="M12 17.3333C13.1046 17.3333 14 16.5871 14 15.6667C14 14.7462 13.1046 14 12 14C10.8954 14 10 13.2538 10 12.3333C10 11.4129 10.8954 10.6667 12 10.6667M12 17.3333C10.8954 17.3333 10 16.5871 10 15.6667M12 17.3333V18M12 10V10.6667M12 10.6667C13.1046 10.6667 14 11.4129 14 12.3333"
          stroke="#c2410c;"
          stroke-width="1.5"
          stroke-linecap="round"></path>
      </g></svg
    >
  </div>

  <!-- Content -->
  <div class="space-y-4">
    <div class="space-y-2">
      <h3 class="heading--tertiary mb-2 line-clamp-2">
        {title}
      </h3>
      <p class="text-ui-300 leading-relaxed">
        {description}
      </p>
    </div>

    <!-- Tech Stack -->
    <div class="flex flex-wrap gap-2">
      {
        tech.map((techItem) => (
          <span class="px-3 py-1 text-xs font-medium bg-ui-700/50 text-ui-300 rounded-full border border-ui-600/50">
            {techItem}
          </span>
        ))
      }
    </div>

    <!-- Links -->
    <div class="gap-3 pt-2 flex">
      <a
        href={link}
        class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-primary-700 hover:bg-primary-800 rounded-full transition-all duration-300"
        target="_blank"
        rel="noopener noreferrer"
      >
        <svg
          class="size-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
          ></path>
        </svg>
        Live Site
      </a>
      <a
        href={repository}
        class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-ui-300 hover:text-white hover:bg-ui-700 rounded-full transition-all duration-300"
        target="_blank"
        rel="noopener noreferrer"
      >
        <svg class="size-4" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path>
        </svg>
        GitHub
      </a>
    </div>
  </div>
</div>
