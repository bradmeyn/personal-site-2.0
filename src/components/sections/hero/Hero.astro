---
import Container from "../../shared/Container.astro";
import IconNav from "./IconNav.astro";
import HeroImage from "./HeroImage.astro";
---

<HeroImage>
  <Container>
    <section>
      <h1>BRAD MEYN</h1>
      <p class="subheading">Software Developer</p>
      <IconNav />
      <a href="#projects" class="btn btn--landing">
        <span>Projects</span>
        <i class="fas fa-chevron-right"></i>
      </a>
    </section>
  </Container>
</HeroImage>

<style>
  section {
    padding: 12rem 0;
  }
  h1 {
    font-size: 6rem;
    font-weight: 500;
    animation: fadeDown 0.6s ease-in-out;
    animation-fill-mode: both;
    animation-delay: 0.5s;
    display: block;
    margin-bottom: var(--margin-sm);
    color: var(--secondary);
  }

  h1::before {
    position: absolute;
    content: "BRAD MEYN";
    color: #fff;
    left: 0.5rem;
    top: 0.25rem;
  }

  .subheading {
    font-size: 2rem;
    font-weight: 500;
    color: var(--text-lightest);
    margin-bottom: var(--margin-lg);
    animation: fadeRight 0.6s ease-in-out;
    opacity: 0;
    animation-fill-mode: both;
    animation-delay: 1s;
  }

  .btn {
    border-radius: 50px;
    text-align: center;
    font-family: var(--font-primary);
    text-decoration: none;
    cursor: pointer;
    font-weight: 500;
    padding: 0.7rem 2rem;
    transition: background 0.7s ease-in-out;
    display: flex;
    align-items: center;
    width: fit-content;
  }

  .btn:hover {
    background-position: right center;
    color: #fff;
    text-decoration: none;
  }

  .btn:hover i {
    transform: translateX(5px);
  }

  .btn--landing {
    animation: fadeUp 0.5s;
    animation-fill-mode: both;
    animation-delay: 1.5s;
    position: relative;
    font-size: var(--hs-sm);
    background-color: var(--secondary);
    color: #ffffff;
    background-size: 200% auto;
    background-image: var(--gradient-secondary);
  }

  i {
    position: relative;
    margin-top: 3px;
    margin-left: 10px;
    transition: all 0.2s ease-in-out;
    font-size: var(--hs-xs);
  }

  @media only screen and (min-width: 768px) {
    h1 {
      font-size: 9rem;
    }

    .subheading {
      font-size: 4rem;
    }
  }
</style>
